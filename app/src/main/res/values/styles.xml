<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">#FEEAB8</item>
        <item name="colorControlActivated">#FEEAB8</item>
        <item name="colorControlHighlight">#FEEAB8</item>
        <item name="actionMenuTextColor">#FEEAB8</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>
    </style>

    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">#3C454A</item>
    </style>

    <style name="DefaultTextBodyPale">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#FEEAB8</item>
    </style>

    <style name="DefaultTextBodyDark">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#3C454A</item>
    </style>

    <style name="header_1">
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FEEAB8</item>
    </style>

    <style name="header_2">
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#3C454A</item>
    </style>

    <style name="header_3">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#3C454A</item>
    </style>

    <style name="header_4">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FEEAB8</item>
    </style>

    <style name="header_5">
        <item name="android:textSize">28dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#3C454A</item>
    </style>

    <style name="header_6">
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FEEAB8</item>
    </style>

</resources>
